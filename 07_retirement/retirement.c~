#include <stdlib.h>
#include <stdio.h>

typedef struct{
  int months;
  double contribution;
  double rate_of_return;
}retire_info;


void compute(int start,double init,retire_info strct){
  while(start != 0){
    printf("Age %3d month %2d you have $%.2lf\n",start/12,start%12,init);
  }
}
void retirement (int startAge, double initial, retire_info working,retire_info retired){
  
  compute(startAge,initial,working);

}

void main(void){
  retire_info working,retired;
  working.months = 489;
  working.contribution = 1000;
  working.rate_of_return = 0.045/12;

  retired.months = 384;
  retired.contribution = -4000;
  retired.rate_of_return = 0.01/12;

  retirement(327, 21,345, working, retired);
}
