void add_future_card(future_cards_t * fc, size_t index, card_t * ptr){
  if(index < fc->n_decks){
fc->decks[index]->cards

  }
    fc->decks = realloc(fc->decks,(index+1)sizeof(*fc->decks));
    fc->decks[index] = NULL;
    fc->decks[index] = realloc(fc->decks[index],(fc->decks[index]->n_cards + 1)sizeof(*fc->decks[index]));
    fc->decks[index]->cards[c->decks[index]->n_cards] = NULL;
    fc->decks[index]->cards[c->decks[index]->n_cards] = realloc(fc->decks[index]->cards[c->decks[index]->n_cards],sizeof(*fc->decks[index]->cards[c->decks[index]->n_cards]));
    
    fc->decks[index]->cards[c->decks[index]->n_cards] = ptr;    
    fc->decks[index]->n_cards++;


  

}

