#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

int find_max(int *arr,int len){
  int max_ind = i = 0;
  for(i = 0;i < len - 1;i++){
    if(arr[i+1] > arr[i]){
      max_ind = i;
    }
  }
  return max_ind;
}

int de_crypt(FILE * f) {
  int c, array[26] = {0};
  while ((c = fgetc(f)) != EOF) {
    if (isalpha(c)) {
      c = tolower(c);
      c -= 'a';
      array[c]++;
    }
  }
  return find_max(array,26) - 4;
}

int main(int argc, char ** argv) {
  if (argc != 2) {
    //fprintf(stderr,"Usage: encrypt key inputFileName\n");
    return EXIT_FAILURE;
  }
  FILE * f = fopen(argv[1], "r");
  if (f == NULL) {
    perror("Could not open file");
    return EXIT_FAILURE;
  }
  int key = -1;
  key = de_crypt(f);
  if(key >= 0 && key < 26){
    printf("%d",key);
  }
  else {
    perror("Failed to decrypt!");
    return EXIT_FAILURE;
  }
  if (fclose(f) != 0) {
    perror("Failed to close the input file!");
    return EXIT_FAILURE;
  }
  return EXIT_SUCCESS;
}

